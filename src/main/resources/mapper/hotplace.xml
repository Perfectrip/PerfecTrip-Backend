<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.ssafy.enjoytrip.hotplace.model.mapper.HotPlaceMapper">

	<resultMap type="hotPlaceDto" id="hotplace">
		<result column="content_id" property="contentId" />
		<result column="content_type_id" property="contentTypeId" />

		<result column="title" property="title" />
		<result column="addr1" property="addr1" />
		<result column="zipcode" property="zipCode" />
		<result column="tel" property="tel" />
		<result column="first_image" property="firstImage" />
		<result column="readcount" property="readCount" />
		<result column="latitude" property="latitude" />
		<result column="longitude" property="longitude" />

		<result column="overview" property="overview" />
	</resultMap>

	<!-- 핫플레이스 목록 리스트 -->
	<select id="listHotPlace" parameterType="map"
		resultMap="hotplace">
		select content_id, content_type_id, title, addr1, zipcode, tel, first_image, readcount, latitude, longitude, overview 
		from hotplace_sorted_by_readcount
		limit #{start}, #{spp}
	</select>

	<!-- 단 일 항 목 조회 -->
	<select id="getHotPlace" parameterType="Integer"
		resultMap="hotplace">
		select content_id, content_type_id, title, addr1, zipcode, tel, first_image, readcount, latitude, longitude, overview 
		from hotplace
		where content_id = #{contentId}
	</select>
</mapper>
